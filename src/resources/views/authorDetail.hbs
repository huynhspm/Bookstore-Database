<div class = "mt-4">
    <div class="row">
        {{#each books}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-book-item">
                <a href="/books/{{this.title}}">
                    <img class="card-img-top" src="{{this.image}}" alt={{this.title}}>
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <a href="/books/{{this.title}}">DETAIL</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
