<section id="Thịnh hành" class="p-5 bg-light">
    <div class="container">
        <h2 class="text-left text-dark">Thịnh hành</h2>
        <div class="row g-4">
            {{#each books}}
            <div class="col-md-6 col-lg-3">
                <div class="card bg-dark card-book-item">
                    <a href="/books/{{this.title}}">
                        <img class="card-img-top" src="{{this.image}}" alt={{this.title}}>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>   
</section>


